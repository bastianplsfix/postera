{
	"tasks": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"preview:msw": "VITE_ENABLE_MSW=true vite preview"
	},
	"compilerOptions": {
		"types": ["react", "react-dom", "@types/react"],
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"]
	},
	"lint": {
		"exclude": ["**/*.gen.ts"]
	},
	"fmt": {
		"useTabs": true,
		"indentWidth": 2,
		"semiColons": false,
		"singleQuote": false,
		"exclude": ["**/*.gen.ts"]
	},
	"nodeModulesDir": "auto",
	"imports": {
		"clsx": "npm:clsx@^2.1.1",
		"tailwind-merge": "npm:tailwind-merge@^3.3.1",
		"~/": "./src/",
		"@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.5",
		"@std/assert": "jsr:@std/assert@1",
		"@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.11",
		"@tanstack/react-query": "npm:@tanstack/react-query@^5.81.5",
		"@tanstack/react-query-devtools": "npm:@tanstack/react-query-devtools@^5.81.5",
		"@tanstack/react-router": "npm:@tanstack/react-router@^1.124.0",
		"@tanstack/react-router-devtools": "npm:@tanstack/react-router-devtools@^1.124.0",
		"@tanstack/router-plugin": "npm:@tanstack/router-plugin@^1.124.0",
		"@types/react": "npm:@types/react@^19.1.8",
		"@types/react-dom": "npm:@types/react-dom@^19.1.6",
		"@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.6.0",
		"msw": "npm:msw@^2.10.2",
		"react": "npm:react@^19.1.0",
		"react-dom": "npm:react-dom@^19.1.0",
		"tailwindcss": "npm:tailwindcss@^4.1.11",
		"vite": "npm:vite@^7.0.1"
	}
}
